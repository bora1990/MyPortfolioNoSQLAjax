

@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    @foreach(var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Mail</td>                
               <td>
                    <a asp-action="DeleteContact" asp-route-id="@item.ContactID" class="btn btn-outline-danger"><i class="fas fa-trash"></i>Sil</a>
                </td>
                <td>
                    <a asp-action="UpdateContact" asp-route-id="@item.ContactID" class="btn btn-outline-success"><i class="fas fa-pen"></i>Güncelle</a>
               </td>


            </tr>
        }
    </table>
    <a asp-action="CreateContact" class="btn btn-outline-info"><i class="fas fa-plus-circle"></i>Yeni Bilgi Ekle</a>

</div>