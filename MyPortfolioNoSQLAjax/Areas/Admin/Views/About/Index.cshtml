@model List<About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Etiket</th>
            <th>Tanım</th>
            <th>tip</th>
            <th>tip</th>
            <th>tip</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Kind1</td>
                <td>@item.Kind2</td>
                <td>@item.Kind3</td>
                <td>
                    <a asp-action="DeleteAbout" asp-route-id="@item.AboutID" class="btn btn-outline-danger">Sil</a>
                </td>
                <td>
                    <a asp-action="UpdateAbout" asp-route-id="@item.AboutID" class="btn btn-outline-success">Güncelle</a>
                </td>


            </tr>
        }
    </table>
    <a asp-action="CreateAbout" class="btn btn-outline-info"><i class="fas fa-plus-circle"></i>Yeni İletişim Bilgisi Ekle</a>

</div>

